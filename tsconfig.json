{
	"compilerOptions": {
		"strict": true,
		"isolatedModules": true,
		"lib": ["ESNext"],
		"module": "nodenext",
		"target": "esnext",
		"moduleResolution": "nodenext",
		"rewriteRelativeImportExtensions": true,
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"resolveJsonModule": true,
		// TODO: Fix worker-configuration.d.ts so that this can be removed
		"skipLibCheck": true,
		"noEmit": true
	}
}
